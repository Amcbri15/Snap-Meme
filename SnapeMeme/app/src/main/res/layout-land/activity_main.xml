<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/backgroundfinal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="$NAPm3Me"
        android:textSize="50dp"
        android:id="@+id/tvSnapMeme"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:id="@+id/camera"
        android:src="@drawable/takephotofinal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:id="@+id/gallery"
        android:src="@drawable/galleryfinaldone"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:id="@+id/ivPreset"
        android:src="@drawable/presetfinal"
        android:layout_alignTop="@+id/gallery"
        android:layout_toRightOf="@+id/tvSnapMeme"
        android:layout_toEndOf="@+id/tvSnapMeme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Camera"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/camera"
        android:layout_alignRight="@+id/camera"
        android:layout_alignEnd="@+id/camera"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gallery"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preset m3Me"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/ivPreset"
        android:layout_alignLeft="@+id/ivPreset"
        android:layout_alignStart="@+id/ivPreset" />


</RelativeLayout>
