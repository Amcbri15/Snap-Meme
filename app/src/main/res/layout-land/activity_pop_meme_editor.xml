<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gmsyrimis.c4q.nyc.cammy.PopMemeEditor"
    android:background="@drawable/backgroundfinal"
    >

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="#383838"
        android:layout_centerInParent="true"
        android:id="@+id/iv_custom_popular"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SATURDAY"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:gravity="center"
        android:id="@+id/top_pop"
        android:capitalize="characters"
        android:paddingTop="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_alignTop="@+id/iv_custom_popular"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EAT POPCORN"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:gravity="center"
        android:id="@+id/bottom_pop"
        android:capitalize="characters"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-20dp"
        android:layout_alignParentStart="true" />




</RelativeLayout>
